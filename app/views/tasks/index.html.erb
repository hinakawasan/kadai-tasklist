<h1>タスク一覧</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>id:</th>
      <th>ステータス</th>
      <th>タスク</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task_path %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

<%= link_to 'タスク追加', new_task_path, class: "btn btn-primary" %>